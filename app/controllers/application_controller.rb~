class ApplicationController < ActionController::Base
  
  helper_method :current_user

  def auth
    if current_user.nil?
      flash[:notice] = "Please sign in"
      redirect_to "/sessions/new"
    end
  end
  
  def current_user
    if session[:user_id]
      @current_user ||= User.find(session[:user_id]) 
    end
  end
end
